{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "preserve",
        "moduleResolution": "Node",
        "strict": true,
        "strictNullChecks": false,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "composite": true,
        "allowJs": false,
        "baseUrl": "./packages",
        "outDir": "es",
        "lib": [
            "ESNext",
            "DOM"
        ]
    }
}
